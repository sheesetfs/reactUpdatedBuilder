# React App Settings
REACT_APP_PATH="/home/user/react/app"
REACT_APP_USER="user1"
REACT_APP_DIR_PERM=750
REACT_APP_FILE_PERM=640
GIT_REPO_SSH="git@github.com:user/repo.git"
GIT_BRANCH="main"

# SSH Key for Git Authentication
SSH_KEY_PATH="/home/user/.ssh/id_rsa"

# Nginx Settings
SERVE_PATH="/var/www/html"
SERVE_USER="nginx/apache"
SERVE_DIR_PERM=755
SERVE_FILE_PERM=644

# Node.js Settings
NODE_ENV=production
NODE_OPTIONS="--max_old_space_size=4096"

# Retention policy for old builds
RETAIN_OLD_BUILDS=7